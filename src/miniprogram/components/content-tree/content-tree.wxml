<view class="content-tree">
    <view
        wx:for="{{contents}}"
        wx:for-index="idx"
        wx:for-item="content"
        wx:key="_id"
        class="content"
    >
        <view class="content-name">{{content.name}}</view>
        <view
            wx:for="{{content.subContents}}"
            wx:for-index="idx"
            wx:for-item="subContent"
            class="sub-content"
            bindtap="onSubContentClick"
            data-id="{{subContent._id}}"
        >
            {{subContent.name}}
        </view>
    </view>
</view>
